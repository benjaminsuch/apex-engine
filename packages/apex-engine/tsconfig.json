{
  "exclude": ["node_modules", "build"],
  "include": ["src", "types"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "build",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "ESNext"
  }
}
